<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="200dp" android:layout_height="120dp" 
	 xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity" 
  	 >
    
    <com.axinxuandroid.activity.view.XRTextView android:id="@+id/dialog_text"
     android:layout_width="fill_parent" android:layout_height="wrap_content" 
     anxinxuan:xrTextSize="18"  anxinxuan:xrPaddingLeft="2" anxinxuan:xrPaddingRight="2" anxinxuan:xrTextColor="#6F6E71"
		 anxinxuan:xrLineSpacing="1.6"
    >
    
    </com.axinxuandroid.activity.view.XRTextView>
    
    <Button android:layout_alignParentBottom="true"  android:layout_width="80dp" android:background="@drawable/shape_corner_button_enable"
          android:text="确定"   android:textSize="20sp"  
          android:id="@+id/dialog_ok" android:layout_marginBottom="10dp"
         
       	     android:textColor="#ffffff"
         android:layout_height="50dp"/>
   
   <Button  android:layout_toRightOf="@id/dialog_ok" android:layout_width="80dp" android:background="@drawable/shape_corner_button_enable"
          android:text="取消"   android:textSize="20sp" android:layout_marginBottom="20dp"
          android:id="@+id/dialog_cancel" android:layout_marginLeft="10dp"
          android:textColor="#ffffff"
         android:layout_height="50dp"/>
   

</RelativeLayout>