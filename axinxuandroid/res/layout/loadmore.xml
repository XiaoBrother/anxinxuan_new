<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F2F3F4"
        android:gravity="center"
        >
  	    <TextView android:textSize="18sp" android:textColor="#ff545454"
  	    android:id="@+id/loadmore_messagetext"
	     android:gravity="center"   android:layout_width="fill_parent" 
	     android:layout_height="fill_parent" android:text="更多"/>
	    <LinearLayout android:gravity="center" android:layout_gravity="center" 
	       android:orientation="horizontal"  android:layout_width="fill_parent" 
	       android:visibility="gone"  android:id="@+id/loadmore_progresslay"
	       android:layout_height="fill_parent">
	        <ProgressBar android:layout_gravity="center_vertical" 
	           android:layout_width="wrap_content" android:layout_height="wrap_content" 
	           android:indeterminateBehavior="repeat" style="?android:progressBarStyleSmallInverse" />
	        <TextView android:textColor="#ff000000" android:gravity="left|center" 
	        android:padding="3.0px" android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" android:text="读取中" />
	    </LinearLayout>
</LinearLayout>
 