<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#fff">

	<com.axinxuandroid.activity.view.CommonTopView
		android:id="@+id/selecttype_topview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" anxinxuan:title="选择环节"
		anxinxuan:leftimgsrc="@drawable/icon_back" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_below="@id/selecttype_topview" android:orientation="vertical">
		<FrameLayout android:layout_width="fill_parent"
			android:layout_marginTop="20dp" android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp" android:layout_height="58dp">
			<ImageView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:background="@drawable/edittext_bg"></ImageView>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<EditText android:id="@+id/selecttype_seachtext"
					android:paddingLeft="12.0sp" android:background="@null"
					android:saveEnabled="true" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginRight="5dp"
					android:layout_alignParentTop="true" />

				<ImageButton android:layout_alignParentRight="true"
					android:background="@drawable/serach_right" android:id="@+id/selecttype_seachbtn"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
				<ImageButton android:layout_alignParentRight="true"
					android:visibility="gone" android:background="@drawable/tianjia_right"
					android:id="@+id/selecttype_addbtn" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</RelativeLayout>
		</FrameLayout>


		<GridView android:id="@+id/selecttype_gridview"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:divider="#00000000" android:numColumns="2"
			android:cacheColorHint="#00000000" android:stretchMode="columnWidth"
			android:verticalSpacing="10dp" android:horizontalSpacing="7dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:layout_marginTop="10dp" android:gravity="center">
		</GridView>



	</LinearLayout>



</RelativeLayout>