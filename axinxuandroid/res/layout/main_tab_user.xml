<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#fff"
	xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity"
	android:orientation="vertical">
 
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:scrollbarStyle="outsideOverlay">
		<LinearLayout android:layout_width="fill_parent" android:paddingLeft="10dp" android:paddingRight="10dp"
			android:layout_height="wrap_content" android:orientation="vertical">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingTop="10dp"
				android:gravity="center_vertical" android:clickable="true"
 				android:paddingBottom="10dp">
				<TextView android:layout_width="wrap_content" android:padding="11dp"
					android:layout_height="wrap_content"  android:gravity="center_vertical"
					android:text="头像" android:textSize="17sp" android:textColor="#787777" />

				<FrameLayout android:layout_width="60dp"
					android:layout_height="60dp" android:layout_alignParentRight="true">
					<ImageView android:id="@+id/userinfo_userimg"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:scaleType="centerCrop" android:layout_centerVertical="true" />
					<ImageView android:background="@drawable/yuanjiao"
						android:layout_width="fill_parent" android:layout_height="fill_parent" />
				</FrameLayout>
			</RelativeLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="姓名" android:textSize="17sp" android:textColor="#787777" />
				<TextView android:id="@+id/userinfo_grxx_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:padding="11dp" android:textSize="17sp"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:textColor="#787777" />
			</RelativeLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="性别" android:textSize="17sp" android:textColor="#787777" />
				<TextView android:id="@+id/userinfo_grxx_sex_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:padding="11dp" android:textSize="17sp"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:textColor="#787777" />
			</RelativeLayout>
            <ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="所在地" android:textSize="17sp" android:textColor="#787777" />
				<TextView android:id="@+id/userinfo_grxx_address_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:padding="11dp" android:textSize="17sp"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:textColor="#787777" />
			</RelativeLayout>
            <ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="农龄" android:textSize="17sp" android:textColor="#787777" />
				<TextView android:id="@+id/userinfo_grxx_age_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:padding="11dp" android:textSize="17sp"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:textColor="#787777" />
			</RelativeLayout>
            <ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="一句话介绍" android:textSize="17sp" android:textColor="#787777" />
			</RelativeLayout>
            <ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:minHeight="50dp"
				android:gravity="center_vertical" android:clickable="true"
				 >
				<TextView android:id="@+id/userinfo_grxx_desc_text"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:padding="11dp" android:textSize="14sp"
					android:layout_centerVertical="true"  android:lineSpacingExtra="4dp"
		        android:lineSpacingMultiplier="1"
					android:layout_alignParentRight="true" android:textColor="#787777" />
			</RelativeLayout>
            <ImageView android:layout_width="fill_parent"
				android:layout_height="0.5dp" android:background="#CFCFD7" />
			<RelativeLayout android:layout_width="fill_parent"
			    android:id="@+id/userinfo_grxx_proust"
				android:layout_height="50dp" android:gravity="center_vertical"
				android:clickable="true"  >
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="11dp"
					android:text="普鲁斯特问卷" android:textSize="17sp" android:textColor="#787777" />
				<ImageView 
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:padding="11dp" android:src="@drawable/gd"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"  />
			</RelativeLayout>
		</LinearLayout>

	</ScrollView>

</LinearLayout>
