<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	 android:background="#F6F6F6"  android:id="@+id/varietybatchitem_bglayout" 
	 android:orientation="vertical">
	<LinearLayout android:orientation="horizontal"
		android:layout_height="90dp" android:layout_width="fill_parent"
	 >
 
 		<LinearLayout 
			 android:layout_width="fill_parent"
			android:layout_height="fill_parent"   android:gravity="center_vertical"
			android:orientation="horizontal">
			
		<FrameLayout android:layout_width="50dp"
			  android:id="@+id/record_detaile_userimglay"  android:layout_marginLeft="15dp"
			android:layout_height="50dp">
			<ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:id="@+id/varietybatchitem_userimg" 
				  android:scaleType="fitXY"
				    />
 			<ImageView android:background="@drawable/circlebg1" android:id="@+id/varietybatchitem_circleimg"
				android:layout_width="fill_parent" android:layout_height="fill_parent" />
		</FrameLayout>	
				 
				
			<ImageView   android:layout_width="wrap_content"  android:id="@+id/varietybatchitem_repeatimg"
			    android:layout_marginLeft="10dp"
 				android:layout_height="fill_parent" android:background="@drawable/batch_bg_normal"
			 />
			<LinearLayout android:layout_height="fill_parent"
				android:layout_width="fill_parent" android:orientation="vertical"
				android:gravity="center_vertical"
				 >
				<RelativeLayout android:layout_height="23dp" android:layout_marginLeft="2dp"
					android:layout_width="fill_parent">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="fill_parent" android:orientation="horizontal"
						android:layout_alignParentLeft="true">
						<TextView android:layout_width="wrap_content"
							android:layout_height="fill_parent" android:textSize="16sp"
							android:text="NO." android:textColor="#8abc1d"
						    android:paddingTop="3dp" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="fill_parent" android:id="@+id/varietybatchitem_batchcode"
							android:textSize="16sp" android:textColor="#8abc1d"
							android:paddingTop="3dp" />
					</LinearLayout>
 				</RelativeLayout>
 				<LinearLayout android:layout_height="wrap_content"  android:layout_marginLeft="2dp"
					android:orientation="vertical" android:layout_width="fill_parent">
					<TextView android:layout_width="wrap_content"
						android:layout_height="fill_parent" android:id="@+id/varietybatchitem_date"
						android:textSize="14sp" android:textColor="#999"
 						 />
					<TextView android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:id="@+id/varietybatchitem_recordcount"
						android:textSize="14sp" android:textColor="#999" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>



	</LinearLayout>
</LinearLayout> 