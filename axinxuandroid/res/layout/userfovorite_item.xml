<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@null" android:orientation="vertical">
	<LinearLayout android:orientation="horizontal" android:id="@+id/usercollect_bglayout"  
		android:layout_height="90dp" android:layout_width="fill_parent"
		android:layout_marginLeft="-55dp">
		<LinearLayout android:layout_width="50dp"
			android:layout_height="fill_parent" android:layout_marginTop="4dp"
			android:gravity="center_vertical|center_horizontal"
			android:layout_marginRight="5dp" >
 			  <ImageButton android:id="@+id/usercollect_collect" android:padding="8dp"
 					android:layout_width="wrap_content" android:layout_height="wrap_content"
 					android:background="@null"
					android:src="@drawable/batchlist_delete"  />
 		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent"  
			android:orientation="horizontal"
			
		    >
		    <TextView android:layout_width="75dp" android:layout_height="fill_parent"
				android:id="@+id/usercollect_variety" android:textSize="20sp" android:layout_marginLeft="25dp"
				android:gravity="center_vertical"
				android:textColor="#bcbcbc"   />
			<ImageView   android:layout_width="wrap_content"  android:id="@+id/usercollect_repeatimg"
			    android:layout_marginLeft="-10dp"
 				android:layout_height="fill_parent" android:background="@drawable/batch_bg_normal"
				 />
 			<LinearLayout android:layout_height="fill_parent" android:gravity="center_vertical"
				android:layout_width="fill_parent" android:orientation="vertical"
				 >
				<RelativeLayout android:layout_height="23dp" android:layout_marginLeft="2dp"
					android:layout_width="fill_parent">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="fill_parent" android:orientation="horizontal"
						android:layout_alignParentLeft="true">
						<TextView android:layout_width="wrap_content"
							android:layout_height="fill_parent" android:textSize="16sp"
							android:text="NO." android:textColor="#8abc1d"
						    android:paddingTop="3dp" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="fill_parent" android:id="@+id/usercollect_batchcode"
							android:textSize="16sp" android:textColor="#8abc1d"
							android:paddingTop="3dp" />
					</LinearLayout>
 				</RelativeLayout>
 				<LinearLayout android:layout_height="wrap_content"  android:layout_marginLeft="2dp"
					android:orientation="vertical" android:layout_width="fill_parent">
					<TextView android:layout_width="wrap_content"
						android:layout_height="fill_parent" android:id="@+id/usercollect_villeagename"
						android:textSize="14sp" android:textColor="#999"
 						 />
					<TextView android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:id="@+id/usercollect_recordcount"
						android:textSize="14sp" android:textColor="#999" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>



	</LinearLayout>
</LinearLayout> 