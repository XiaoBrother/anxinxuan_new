<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:orientation="horizontal"  android:minHeight="90dp"
	android:background="#fff">

	<LinearLayout android:layout_width="fill_parent" android:gravity="center_vertical"
		android:layout_height="fill_parent" android:orientation="horizontal" android:paddingBottom="2dp">
		<ImageView android:layout_width="wrap_content" android:id="@+id/draft_item_upload"
			android:layout_height="fill_parent" android:src="@drawable/drat_item_upload_enable"
			android:background="@null" android:scaleType="centerInside"
			android:layout_marginLeft="10dp" />
		<LinearLayout android:layout_width="fill_parent"
			  android:layout_marginLeft="10dp"
			  android:layout_marginRight="8dp"  android:gravity="center_vertical"
			android:layout_height="fill_parent" android:orientation="vertical">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:layout_width="wrap_content"
					android:id="@+id/draft_item_recordlabel" android:textSize="18sp"
					android:textColor="#8abc1d" android:layout_height="wrap_content"
					android:text="未选择记录环节" android:layout_alignParentLeft="true" />
				<TextView android:layout_width="wrap_content" android:id="@+id/draft_item_time"
					android:textSize="15sp" android:textColor="#999"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true" />
			</RelativeLayout>
			<TextView android:layout_width="fill_parent" android:id="@+id/draft_item_context"
				android:textSize="16sp" android:textColor="#666" android:text="未填写" 
				android:layout_height="wrap_content" />
			<com.axinxuandroid.activity.view.EditTabelView 
				android:id="@+id/draft_item_tablelayout" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:visibility="gone" />

		</LinearLayout>

	</LinearLayout>
	<LinearLayout android:layout_width="70dp"
		android:layout_marginRight="-70dp" android:layout_height="fill_parent"
		android:orientation="horizontal"  
		android:gravity="center">
		<ImageView android:layout_width="wrap_content" android:id="@+id/draft_item_delete"
			android:layout_height="wrap_content" android:src="@drawable/batchlist_delete" />
	</LinearLayout>


</LinearLayout>