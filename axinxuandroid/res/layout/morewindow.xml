<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/popwindowbg" android:paddingTop="10dp"
	android:id="@+id/timelinemorepop_mainlay"
	android:orientation="vertical">

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_editrecord">
		<LinearLayout android:layout_width="fill_parent"
			android:padding="5dp" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="center_vertical">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_jilu" />
			<TextView android:layout_width="wrap_content"
				android:textSize="18sp" android:textColor="#ffffff"
				android:layout_marginLeft="10dp" android:layout_height="wrap_content"
				android:text="编辑记录" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_editdesc">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_jilu" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="编辑简介" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>
	
	
	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_uploadimg">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_jilu" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="上传图片" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_shareweibo">
		<LinearLayout android:layout_width="fill_parent"
			android:padding="5dp" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="center_vertical">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_weibo" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="分享到微博" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_sharecomments">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_moments" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="分享到朋友圈" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_collect">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
			    android:id="@+id/timelinemorepop_collect_img"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_collect" />
			<TextView android:layout_width="wrap_content"
			 android:id="@+id/timelinemorepop_collect_text"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="加入收藏" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_copylink">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_copylink" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="复制链接" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_buylink">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_buylink" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="购买链接" />
		</LinearLayout>
		<ImageView android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/popwindowline" />
	</LinearLayout>
	
	  

	<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
		android:layout_height="45dp" android:orientation="vertical"
		android:id="@+id/timelinemorepop_confirmbuy">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:padding="5dp"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:layout_width="wrap_content"
				android:layout_marginLeft="5dp" android:background="@null"
				android:scaleType="centerInside" android:layout_height="wrap_content"
				android:src="@drawable/morewindow_buyconfirm" />
			<TextView android:layout_width="wrap_content"
				android:layout_marginLeft="10dp" android:textSize="18sp"
				android:textColor="#ffffff" android:layout_height="wrap_content"
				android:text="确认收货" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>