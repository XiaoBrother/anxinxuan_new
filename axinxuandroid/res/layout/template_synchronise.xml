<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/page_bg_color"
         >
     <com.axinxuandroid.activity.view.CommonTopView
	     android:id="@+id/tempate_synch_topview"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         anxinxuan:title="更新模板"
         />
      <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/tempate_synch_updatelayout"
         android:visibility="gone"
         android:paddingTop="10dp"
         android:paddingLeft="5dp"
      >
         <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="可更新模板"
           android:textSize="20sp"
           android:textColor="#719C2B"
           android:textStyle="bold"
         />
         <ListView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/tempate_synch_updates"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
             android:divider="#aa9E9C9B"
			  android:dividerHeight="0dp"
			  android:fadingEdge="none"
			  android:fadingEdgeLength="0dp"
			  android:cacheColorHint="#00000000"
			  android:background="@drawable/shape_corners"
         />
      </LinearLayout>
     
       <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/tempate_synch_addlayout"
         android:visibility="gone"
         android:paddingTop="10dp"
         android:paddingLeft="5dp"
       >
         <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="新增模板"
           android:textSize="20sp"
           android:textColor="#719C2B"
           android:textStyle="bold"
         />
         <ListView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/tempate_synch_adds"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
              android:divider="#aa9E9C9B"
			  android:dividerHeight="0.5dp"
			  android:fadingEdge="none"
			  android:fadingEdgeLength="0dp"
			  android:cacheColorHint="#00000000"
			  android:background="@drawable/shape_corners"
         />
      </LinearLayout>
      
</LinearLayout>
