<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000"
    >
     
 <RelativeLayout   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="#000000"
     android:orientation="vertical" 
     >
        <RelativeLayout
           android:layout_height="fill_parent"
           android:layout_width="fill_parent" android:visibility="gone"
           android:gravity="center_horizontal|center_vertical"
          >
	      <WebView
	        android:id="@+id/playvideo_videoweb"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
 	      />
         </RelativeLayout>
        <RelativeLayout
           android:layout_height="fill_parent"
           android:layout_width="fill_parent"  android:visibility="gone"
           android:gravity="center_horizontal|center_vertical"
          >
        <com.axinxuandroid.activity.view.VideoView
	        android:id="@+id/playvideo_videolocal"
 	        android:layout_width="480dp"
	        android:layout_height="320dp"
	        android:gravity="center"
 	     /> 
	     <ImageView
	        android:id="@+id/playvideo_videoshowimg"
	        android:layout_width="480dp"
	        android:layout_height="320dp"
	        android:src="@drawable/videobg"
	        android:layout_alignBaseline="@id/deleteres_videoview"
	      />
	    </RelativeLayout>
 </RelativeLayout>
 
  
</RelativeLayout>
