<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:anxinxuan="http://schemas.android.com/apk/res/com.axinxuandroid.activity"
	android:background="@color/page_bg_color">

	<com.axinxuandroid.activity.view.CommonTopView
		android:id="@+id/addvariety_topview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" anxinxuan:title="添加品种"
		anxinxuan:lefttext="取消" anxinxuan:righttext="保存" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/addvariety_topview">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			>
			<FrameLayout android:layout_width="fill_parent"
				android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp" android:layout_height="58dp">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:background="@drawable/edittext_bg"></ImageView>
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<Spinner android:id="@+id/addvariety_fcategory"
						android:background="@null" android:layout_width="fill_parent"
						android:layout_height="50dp" android:paddingLeft="15dp" />

					<ImageButton android:layout_alignParentRight="true"
						android:clickable="false" android:background="@drawable/xialakuang"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />
				</RelativeLayout>
			</FrameLayout>



			<FrameLayout android:layout_width="fill_parent"
				android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp" android:layout_height="58dp">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:background="@drawable/edittext_bg"></ImageView>
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<Spinner android:id="@+id/addvariety_scategory"
						android:layout_width="fill_parent" android:layout_height="50dp"
						android:paddingLeft="15dp" android:background="@null"
						android:layout_marginTop="5dp" />
					<ImageButton android:layout_alignParentRight="true"
						android:clickable="false" android:background="@drawable/xialakuang"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />
				</RelativeLayout>
			</FrameLayout>


			<FrameLayout android:layout_width="fill_parent"
				android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp" android:layout_height="58dp">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:background="@drawable/edittext_bg"></ImageView>
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<Spinner android:id="@+id/addvariety_tcategory"
						android:layout_width="fill_parent" android:layout_height="50dp"
						android:paddingLeft="15dp" android:background="@null"
						android:layout_marginTop="5dp" />
					<ImageButton android:layout_alignParentRight="true"
						android:clickable="false" android:background="@drawable/xialakuang"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />
				</RelativeLayout>
			</FrameLayout>


			<FrameLayout android:layout_width="fill_parent"
				android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp" android:layout_height="58dp">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:background="@drawable/edittext_bg"></ImageView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:orientation="horizontal">
					<TextView  android:gravity="center"
						android:text="品种名称：" android:textSize="18sp" android:textColor="#fff"
						android:background="@drawable/edit_left_bg" android:layout_width="120dp"
						android:layout_height="fill_parent" />
					<EditText android:layout_width="fill_parent" android:textColorHint="#ddd"
						android:layout_height="50dp" android:hint="输入品种名称..."
						android:background="@null" android:id="@+id/addvariety_varietyname" />

				</LinearLayout>
			</FrameLayout>


 
			<EditText android:id="@+id/addvariety_varietydesc" android:layout_margin="15dp" 
				android:layout_width="fill_parent" android:layout_height="150dp" 
				android:background="@drawable/edittext_bg" android:gravity="top"
				 android:textColorHint="#ddd"  android:hint="输入品种描述..." 
				android:layout_marginTop="5dp" android:padding="10dp"  />
		</LinearLayout>

	</ScrollView>




</RelativeLayout>